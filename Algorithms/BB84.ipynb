1	"def encode_qubits(bits, bases):\n"
2	"    qubits = []\n"
3	"    for bit, basis in zip(bits, bases):\n"
4	"        qc = QuantumCircuit(1, 1)\n"
5	"        if basis == 'X':\n"
6	"            qc.h(0)\n"
7	"        if bit == 1:\n"
8	"            qc.x(0) \n"
9	"        if basis == 'X':  \n"
10	"            qc.h(0)\n"
11	"        qubits.append(qc)\n"
12	"    return qubits"
